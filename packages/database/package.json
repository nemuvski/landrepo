  "dependencies": {
    "@prisma/client": "^4.7.1"
  },
  "devDependencies": {
    "@project/tsconfig": "*",
    "prisma": "^4.7.1",
    "prisma-nestjs-graphql": "^17.0.2",
    "ts-node": "^10.9.1"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node scripts/seed.ts"
  }
}
