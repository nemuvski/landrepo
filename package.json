{
  "name": "landrepo",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=18.16.1",
    "yarn": "please-use-npm",
    "npm": ">=9.5.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "turbo run clean",
    "build:api": "npm run build -w apps/api",
    "build:web": "npm run build -w apps/web",
    "build:packages": "turbo run build --filter=@project/*",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --check './**/*.{js,jsx,ts,tsx}'",
    "format:fix": "prettier --write './**/*.{js,jsx,ts,tsx}'"
  },
  "devDependencies": {
    "@project/eslint-config-custom": "*",
    "@types/node": "^20.3.2",
    "eslint": "^8.43.0",
    "prettier": "^2.8.8",
    "tsup": "^7.1.0",
    "turbo": "^1.10.6",
    "typescript": "^5.1.5"
  }
}
